doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Joemazon
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous")
    link(rel="stylesheet" href="/stylesheets/style.css")
    link(href="https://fonts.googleapis.com/css2?family=Kanit:wght@200&display=swap" rel="stylesheet")
  body#joemazon-login
    a(href="http://localhost:3000")
      h1#joemazon-login-title Joemazon

    div#joemazon-login-main-content.container
      h2 Sign Up
      form.form-signin(action="sign-up" method="POST")
        label.sr-only(for="inputFirstName") First name
        input#inputFirstName.form-control(placeholder="First Name" name="firstName")
        label.sr-only(for="inputLastName") Last name
        input#inputLastName.form-control(placeholder="Last Name" name="lastName")
        label.sr-only(for="inputUsername") Username
        input#inputUsername.form-control(placeholder="Username" name="username")
        label.sr-only(for="inputEmail") Email address
        input#inputEmail.form-control(type="email" placeholder="Email Address" name="emailAddress")   
        label.sr-only(for="inputPassword") Password
        input#inputPassword.form-control(type="password" placeholder="Password" name="password")    
        div.checkbox.mb-3
          label
            <input type="checkbox" value="remember-me"> Remember me 
        button#signup.btn.btn-lg.btn-primary.btn-block(onclick="signUpCheck();") Sign up
        div#detailsPopup 
    